doctype html  
html(lang='en')  
  head
    title Pug
    style
      include style.css
    script
      include moduleData.js
  body
    div
      -
        var modules_data = {
          cargo: {
            id: "cargo",
            name: "Cargo",
            prices: [1000, 2000, 4000, 8000, 10000],
            term: [2, 4, 8, 16, 24]
          },
          comp: {
            id: "comp",
            name: "Shipment comp",
            prices: [1500, 2500, 4500, 8500, 11000],
            term: [3, 6, 10, 20, 30]
          },
          batery: {
            id: "batery",
            name: "Batery",
            prices: [2500, 3500, 5500, 9500, 13000],
            term: [5, 10, 15, 20, 40]
          }
        }

    div(style='display:flex')

      .current-modules(style='width: 200px;')
        p Trade modules
           each item in modules
              p
                button(class=modules_data[item].id)= modules_data[item].name

        p
          button.cargo cargo
        p
          button.comp shipment comp
        p Atack modules
        p
          button.batery batery
      .target-modules
        p Trade modules
        p
          button.cargo cargo
        p
          button.comp shipment comp
        p Atack modules
        p
          button.batery batery
    p.result
    p(class=css) #{insertData}
  script
    include script.js
