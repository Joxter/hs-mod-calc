mixin module(data)
  - var bg = "background-image: url('../pages/modules/" + data.id + ".png')"
  div.modules-pack__item
    button.module(
      data-module-id=data.id,
      data-current-l=0,
      data-target-l=0,
      style=bg
    )= data.name

doctype html
html(lang='en')
  head
    title Hades Star Module Calculator
    meta(name="viewport" content="width=device-width, initial-scale=1")/
    style
      include style.css
  body
    header
      p Result:&nbsp;
        span.result
      div.controls
        button.save-btn Save current to URL
        button.reset-btn Reset current

      div.mode-toggle
        input(type="radio", name="mode" value="current" checked id="current-radio")
        label(for="current-radio") current
        input(type="radio", name="mode" value="target" id="target-radio")
        label(for="target-radio") target

    .modules
      h2 Trade modules
      section.modules-pack
        each moduleData in tradeModules
          +module(moduleData)

      h2 Mining modules
      section.modules-pack
        each moduleData  in miningModules
          +module(moduleData)

      h2 Weapon modules
      section.modules-pack
        each moduleData  in weaponModules
          +module(moduleData)

      h2 Shield modules
      section.modules-pack
        each moduleData  in shieldModules
          +module(moduleData)

      h2 Support modules
      section.modules-pack
        each moduleData  in supportModules
          +module(moduleData)
    .modal
      .modal-container
        .module-form
          img(src="modules/emp.png", alt="module icon").module-form__icon
          h2.module-form__header Module name
          p.module-form__description Module description
          label.module-form__select-label from
            select(name="from")
              option(value="1" label=1)
              option(value="2" label=2)
          label.module-form__select-label to
            select(name="to")
              option(value="1" label=1)
              option(value="2" label=2)
          .footer
            button.module-form__btn.module-form__btn--cancel Cancel
            button.module-form__btn.module-form__btn--ok Ok
  script(src='script.js')
